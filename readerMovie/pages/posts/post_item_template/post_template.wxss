.post-container{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom:40rpx;
  background-color: #fff;
  border-bottom:1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom:5px;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
}
.post-author{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  vertical-align:middle;
}
.post-date{
  margin-left:20rpx;
  vertical-align:middle;
  margin-bottom:5px;
  font-size:26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: bold;
  color:#333;
  margin-bottom: 10px;
  margin-left:10px;
}
.post-image{
  width:100%;
  height:240rpx;
  margin-left:16rpx;
  margin:auto 0;
  margin-bottom:12px;
}
.post-content{
  color:#666;
  font-size:28rpx;
  margin-bottom:20px;
  margin-left:20rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  line-height:16rpx;
  margin-left:16rpx;
}
.post-like-image{
  height:16rpx;
  width:16rpx;
  margin-right:8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right:20px;
  font-weight: light;
  font-size:24rpx;
}